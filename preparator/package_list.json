            ]
    },

    "ubuntu":{
        "pkgmgr":"apt",
        "init":"apt -y update",
        "packages":
            [
                "git-flow",
                "python3-dev",
                "python3-pip",
                "python3-venv",
                "direnv"
            ]
    },
    "rhel":{
        "pkgmgr":"yum",
        "init":"yum -y install epel-release\nyum -y update",
        "packages":
            [
                "gitflow",
                "python3-devel"
            ]
    },
    "mac":{
        "pkgmgr":"brew",
        "init":"/usr/bin/ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\"",
        "packages":
            [
                "coreutils",
                "git-flow",
                "reattach-to-user-namespace",
                "mas",
                "vim"
            ],
        "cask":
            [
                "google-chrome",
                "google-japanese-ime",
                "cooviewer",
                "google-backup-and-sync"
            ]
    },
    "pip":{
        "packages":
            [
                "neovim",
                "flake8",
                "awscli",
                "ipython",
                "powerline-status"
            ]
    }
}


